<%= form_for @gym do |f| %>
    <%= f.hidden_field :owner_id, value: current_user.id %>

    <%= f.label "Gym Name" %>
    <%= f.text_field :name %><br>

    <%= f.label :description %>
    <%= f.text_field :description %><br>

    <%= f.label "Address" %>
    <%= f.text_area :address_1 %><br>

    <%= f.label "Address 2 (optional)" %>
    <%= f.text_area :address_2 %><br>

    <%= f.label :city %>
    <%= f.text_field :city %><br>

    <%= f.label :state %>
    <%= f.text_field :state %><br>

    <%= f.label "Maximum Guests" %>
    <%= f.number_field :guests %><br>
    
    <%= f.label :price %>
    <%= f.number_field :price %><br>

    <%= f.label "Gym Photo" %>
    <%= f.file_field :avatar %><br>

    <%= f.hidden_field :avatarm class: "simple-file-upload" %>

    <%= f.submit %><br>

    <%= link_to "Back", :back %>
<% end %>